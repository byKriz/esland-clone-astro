---
import Layout from "../../layouts/Layout.astro";
import Video from "../../components/home/Video.astro";
import Intro from "../../components/home/Intro.astro";
import Bento from "../../components/home/Bento.astro";
import PreFooter from "../../components/home/PreFooter.astro";

import { getI18N } from "../../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
  title={i18n?.SEO_TITLE as string}
  description={i18n?.SEO_DESCRIPTION as string}
>
  <Video />
  <main>
    <Intro />
    <Bento />
    <PreFooter />
  </main>
</Layout>

